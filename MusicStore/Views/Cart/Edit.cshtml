@model CartItem

@{
    ViewData["Title"] = " | Edit Cart";
}

<div class="container mt-4">
    <h1 class="text-light">Edit Cart Item</h1>

    <form asp-action="Edit" method="post" class="mt-4">
        <div class="cardBig">
            <div class="card-body">
                <h4 class="card-title">@Model.Album.Title</h4>
                <div class="card-text">
                    <div class="row mb-2">
                        <div class="col-3">
                            <label class="font-weight-bold">Price:</label>
                        </div>
                        <div class="col">
                            <p class="mb-0">@Model.Album.Price.ToString("c")</p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Quantity" class="font-weight-bold">Quantity:</label>
                        </div>
                        <div class="col">
                            <select asp-for="Quantity" class="form-control" my-min-number="1" my-max-number="10"></select>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <input type="hidden" asp-for="Album.AlbumId"/>
                <input type="hidden" asp-for="Album.Title"/>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" my-button class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>