@model Album

@{
    ViewData["Title"] = " | Album Details";
}

<div class="container mt-5">
    <h1 class="text-center text-light">Album Details</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded album-image" width="300" height="300">
        </div>
        <div class="col-md-8">
            <table class="table mt-4">
                <tr>
                    <th class="w-25 text-light">Title:</th>
                    <td class="text-light">@Model.Title</td>
                </tr>
                <tr>
                    <th class="text-light">
                        @if (Model.AlbumArtists.Count > 1)
                        {
                            <text>Artists</text>
                        }
                        else
                        {
                            <text>Artist</text>
                        }
                        :
                    </th>
                    <td class="text-light">
                        @foreach (AlbumArtist ba in Model.AlbumArtists)
                        {
                            <p>
                                <partial name="_ArtistLinkPartial" model="@ba.Artist"/>
                            </p>
                        }
                    </td>
                </tr>
                <tr>
                    <th class="text-light">Price:</th>
                    <td class="text-light">@Model.Price.ToString("c")</td>
                </tr>
                <tr>
                    <th class="text-light">Genre:</th>
                    <td class="text-light">@Model.Genre.Name</td>
                </tr>
                <tr>
                    <th class="text-light">Release Date:</th>
                    <td class="text-light">@Model.ReleaseDate.ToString("d")</td>
                </tr>

            </table>

            <form asp-action="Add" asp-controller="Cart" method="post">
                <button type="submit" name="id" value="@Model.AlbumId" class="btn btn-warning">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>