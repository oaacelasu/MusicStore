@model IEnumerable<Artist>

@{
    ViewData["Title"] = " | Manage Artists";
}

<div class="container mt-4">
    <h1 class="mb-2 text-light">Manage Artists</h1>
    <ul class="list-group">
        <li class="list-group-item">
                        <h5 class="mt-1"><a asp-action="Add" class="btn btn-warning">Add an Artist</a></h5>

        </li>
        <li class="list-group-item">
            <form asp-action="Select" method="post" class="form-inline">
                <h5 class="mt-1 mr-5">Select an Artist</h5>
                        <select name="id" class="form-control ml-2 mr-2" asp-items='@new SelectList(Model, "ArtistId", "FullName")'></select>
    
                <input type="submit" name="Operation" value="View Albums"
                    class="ml-2 btn btn-secondary" my-button />
                <input type="submit" name="Operation" value="Edit"
                    class="m-2 btn btn-warning" my-button />
                <input type="submit" name="Operation" value="Delete"
                    class="m-2 btn btn-danger" my-button />
            </form>
        </li>
    </ul>
</div>